          }
        },
        {
          "type": "text",
          "text": "and"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "beings"
            }
          ],
          "link": {
            "id": "rules_glossary/b/beings",
            "anchor": "",
            "url": "/docs/rules_glossary/B/being"
          }
