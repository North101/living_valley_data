    {
      "type": "p",
      "items": [
        {
          "type": "text",
          "text": "When a path attachment is drawn, it is"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "attached"
            }
          ],
          "link": {
            "id": "rules_glossary/a/attach",
            "anchor": "",
            "url": "/docs/rules_glossary/A/attach"
          }
        },
        {
          "type": "text",
          "text": "to another card"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "in play"
            }
          ],
          "link": {
            "id": "rules_glossary/i/in_play",
            "anchor": "",
            "url": "/docs/rules_glossary/I/in_play"
          }
        },
        {
          "type": "text",
          "text": "following the instructions on the attachment. If the card it is"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "attached"
            }
          ],
          "link": {
            "id": "rules_glossary/a/attach",
            "anchor": "",
            "url": "/docs/rules_glossary/A/attach"
          }
        },
        {
          "type": "text",
          "text": "to leaves play for any reason, or the attachment would become unattached (without additional instructions on where to move it),"
