{
  "id": "rules_glossary/a/attachments",
  "lookup_group": "rules_glossary",
  "lookup_id": "attachments",
  "title": "Attachments",
  "content": [
    {
      "type": "p",
      "items": [
        {
          "type": "text",
          "text": "Attachments are"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "Ranger cards"
            }
          ],
          "link": {
            "id": "rules_glossary/r/ranger_cards",
            "anchor": "",
            "url": "/docs/rules_glossary/R/ranger_cards"
          }
        },
        {
          "type": "text",
          "text": "that are placed"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "in play"
            }
          ],
          "link": {
            "id": "rules_glossary/i/in_play",
            "anchor": "",
            "url": "/docs/rules_glossary/I/in_play"
          }
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "attached"
            }
          ],
          "link": {
            "id": "rules_glossary/a/attach",
            "anchor": "",
            "url": "/docs/rules_glossary/A/attach"
          }
        },
        {
          "type": "text",
          "text": "to a card specified in the attachment card\u2019s text. When you play one, place that card under or to the side of the card to which it is attached and apply its effects. If the card it is attached to leaves play for any reason,"
        },
        {
          "type": "a",
          "items": [
            {
              "type": "text",
              "text": "discard"
            }
          ],
          "link": {
            "id": "rules_glossary/d/discard",
            "anchor": "",
            "url": "/docs/rules_glossary/D/discard"
          }
        },
        {
          "type": "text",
          "text": "the attachment card."
        }
      ]
    },
    {
      "type": "img",
      "items": []
    },
    {
      "type": "ol",
      "items": [
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "a",
                  "items": [
                    {
                      "type": "text",
                      "text": "Energy"
                    }
                  ],
                  "link": {
                    "id": "rules_glossary/e/energy",
                    "anchor": "",
                    "url": "/docs/rules_glossary/E/energy"
                  }
                },
                {
                  "type": "text",
                  "text": "Cost:"
                }
              ]
            },
            {
              "type": "text",
              "text": "The number of energy tokens that need to be spent to play the card."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "text",
                  "text": "Title:"
                }
              ]
            },
            {
              "type": "text",
              "text": "The name of the card."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "text",
                  "text": "Card Type and"
                },
                {
                  "type": "a",
                  "items": [
                    {
                      "type": "text",
                      "text": "Trait"
                    }
                  ],
                  "link": {
                    "id": "rules_glossary/t/traits",
                    "anchor": "",
                    "url": "/docs/rules_glossary/T/traits"
                  }
                }
              ]
            },
            {
              "type": "text",
              "text": "Flavorful attributes that may be referenced by card abilities."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "a",
                  "items": [
                    {
                      "type": "text",
                      "text": "Equip Value"
                    }
                  ],
                  "link": {
                    "id": "rules_glossary/e/equip_value",
                    "anchor": "",
                    "url": "/docs/rules_glossary/E/equip_value"
                  }
                }
              ]
            },
            {
              "type": "text",
              "text": "The amount of space the card takes up when equipped. If you have more than five total filled-in equip value boxes in your"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "player area"
                }
              ],
              "link": {
                "id": "rules_glossary/p/player_area",
                "anchor": "",
                "url": "/docs/rules_glossary/P/player_area"
              }
            },
            {
              "type": "text",
              "text": ", you must"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "discard"
                }
              ],
              "link": {
                "id": "rules_glossary/d/discard",
                "anchor": "",
                "url": "/docs/rules_glossary/D/discard"
              }
            },
            {
              "type": "text",
              "text": "gear until you have five or fewer."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "text",
                  "text": "Tokens:"
                }
              ]
            },
            {
              "type": "text",
              "text": "Shows the name of a special token type used for this card and the number of those tokens placed on it when it enters play. Use"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "general tokens"
                }
              ],
              "link": {
                "id": "rules_glossary/g/general_tokens",
                "anchor": "",
                "url": "/docs/rules_glossary/G/general_tokens"
              }
            },
            {
              "type": "text",
              "text": "to track these."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "a",
                  "items": [
                    {
                      "type": "text",
                      "text": "Approach Icons"
                    }
                  ],
                  "link": {
                    "id": "rules_glossary/a/approach_icons",
                    "anchor": "",
                    "url": "/docs/rules_glossary/A/approach_icons"
                  }
                }
              ]
            },
            {
              "type": "text",
              "text": "Icons that can be committed to tests by"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "discarding"
                }
              ],
              "link": {
                "id": "rules_glossary/d/discard",
                "anchor": "",
                "url": "/docs/rules_glossary/D/discard"
              }
            },
            {
              "type": "text",
              "text": "the card. The card adds one"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "effort"
                }
              ],
              "link": {
                "id": "rules_glossary/e/effort",
                "anchor": "",
                "url": "/docs/rules_glossary/E/effort"
              }
            },
            {
              "type": "text",
              "text": "for each approach icon matching the one shown on the test."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "text",
                  "text": "Abilities and Tests:"
                }
              ]
            },
            {
              "type": "text",
              "text": "The main abilities of that card. This can include"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "tests"
                }
              ],
              "link": {
                "id": "rules_glossary/t/tests",
                "anchor": "",
                "url": "/docs/rules_glossary/T/tests"
              }
            },
            {
              "type": "text",
              "text": "the Rangers can perform, special rules for the card, or effects that resolve when the card"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "clears"
                }
              ],
              "link": {
                "id": "rules_glossary/c/clear",
                "anchor": "",
                "url": "/docs/rules_glossary/C/clear"
              }
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "a",
                  "items": [
                    {
                      "type": "text",
                      "text": "Aspect"
                    }
                  ],
                  "link": {
                    "id": "rules_glossary/a/aspects",
                    "anchor": "",
                    "url": "/docs/rules_glossary/A/aspects"
                  }
                },
                {
                  "type": "text",
                  "text": "Requirement:"
                }
              ]
            },
            {
              "type": "text",
              "text": "You must have this value or higher in the shown aspect to include this card in your deck."
            }
          ]
        },
        {
          "type": "li",
          "items": [
            {
              "type": "strong",
              "items": [
                {
                  "type": "text",
                  "text": "Set Information:"
                }
              ]
            },
            {
              "type": "text",
              "text": "The name of the card\u2019s"
            },
            {
              "type": "a",
              "items": [
                {
                  "type": "text",
                  "text": "set"
                }
              ],
              "link": {
                "id": "rules_glossary/s/sets",
                "anchor": "",
                "url": "/docs/rules_glossary/S/sets"
              }
            },
            {
              "type": "text",
              "text": "and the card\u2019s number in that set."
            }
          ]
        }
      ]
    }
  ],
  "items": [],
  "url": "/docs/rules_glossary/A/attachment"
}